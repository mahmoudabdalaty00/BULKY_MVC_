@page
@model RazorWeb.Pages.Categories.IndexModel

<div class="container">
     
    <div class="row pt-4  pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                      Category List
                </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/create"  
            class="btn btn-primary"
            >
                Add Category <i class="bi bi-plus-circle"></i>
                
            </a>
        </div>
    </div>
        
<table class="table table-hover pt-4">
    <thead>
      
        <tr class ="table-primary">
            <th scope="col">Name</th>
            <th scope="col">DisplayOrder</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var m in Model.Categories)
{     
        <tr >
        <td>@m.Name</td>
        <td>@m.DisplayOrder</td>
        <td>
                        <div class="w-75 btn-group" role="group">
                            <a  asp-page="/Categories/Edit" asp-route-id="@m.Id"   class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a   asp-page="/Categories/Delete" asp-route-id="@m.Id"   class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>

         </td>
         </tr> 
}
    </tbody>
</table>

</div>
 
