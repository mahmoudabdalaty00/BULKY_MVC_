@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="text-center col-12">
                <h2 class="text-primary">Create Category</h2>
            </div>
        </div>        
    </div>
    <div class="card-body p-4 ">

       <form action="Create" method="post">
            <div class="border border-2 border-secondary p-5 ">
                <div class="row pb-2">
                    <hr class="border-2 border-dark" />
                </div>

                <div asp-validation-summary="All"></div>
                <div class="mb-3 pt-1 pb-1 row">
                    <label class="form-label">Category Name</label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-1 pb-1 row">
                    <label class="form-label">Display Order</label>
                    <input asp-for="DisplayOrder" type="text" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to Category List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


 

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}






























