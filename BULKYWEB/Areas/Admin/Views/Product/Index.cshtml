@model List<Product>
 
<div class="container">
     
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="UpSert"
               class="btn btn-primary">
                Add Product <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
        
    <table class="table table-hover pt-4">
        <thead>
            <tr class="table-primary">
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Author</th>
                <th scope="col">ISBM</th>
                <th scope="col">Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {     
                <tr>
                    <td>@p.Name</td>                   
                    <td>@p.price.ToString("C")</td>
                    <td>@p.Author</td>
                    <td>@p.ISBN</td>
                    <td>@p.Category.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="UpSert" asp-route-id="@p.Id"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@p.Id" 
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr> 
            }
        </tbody>
    </table>
</div>








